<% if @users.any? %>
    <div class="row">
        <div class="col-8 offset-2 block">
            <table class="table">
                <thead>
                    <tr>
                        <td scope="col">ユーザ</td>
                        <td scope="col">フォロー数</td>
                        <td scope="col">フォローワー数</td>
                        <td scope="col">累計金額</td>
                    </tr>
                </thead>

                <% @users.each do |user| %>
                    <tbody>
                        <tr>
                            <th scope="row">
                                <%= link_to user_path(user) do %>
                                    <%= attachment_image_tag user, :profile_image, size: "50x50", fallback: "no_image.jpg", class: "rounded-image" %>
                                    <%= user.name %>
                                <% end %>
                            </td>
                            <td><%= link_to "#{user.follower.count}", user_followes_path(user) %></td>
                            <td><%= link_to "#{user.followed.count}", user_followers_path(user) %></td>
                            <td><%= user.posts.sum(:fee) %>円</td>
                        </tr>
                    </tbody>
                <% end %>
            </table>
        </div>
    </div>
<% end %>