<% if user_signed_in? %>
    <% if @posts.blank? %>
        <h1>ようこそmonemoneへ</h1>
        <p>まず初めに誰かフォローしましょう</p>
    <% else %>
        <div class="row">
            <div class="col-8 offset-2">
                <div id="post_list">
                    <% if @posts.any? %>
                        <%= render 'post_list', posts: @posts %> 
                    <% end %>      
                </div>
                <div class="more">
                    <%# <%= link_to_next_page @posts, 'もっと見る', remote: true, id: 'view_more' %> %>
                </div>
            </div>
        </div>
    <% end %>
<% end %>

