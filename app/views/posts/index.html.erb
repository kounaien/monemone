 <div class="row">
    <div class="col-8 offset-2">
        <div id="post_list">
            <% if user_signed_in? %> 
                <% if @posts.any? %>
                    <div id="post_lists">
                        <%= render 'post_lists', posts: @posts %>
                    </div>
                    <div class="more">
                        <%= link_to_next_page @posts, 'もっと見る', remote: true, id: 'view_more' %>
                    </div>
                <% else %>
                    <h2 style="text-align: center;">ここにフォローしたユーザの投稿が表示されます</h2>
                <% end %>
            <% else %>
                    <h2 style="text-align: center;">sign upでフォローしましょう</h2>
                    <%= render 'guest_post_lists', posts: @posts %>
            <% end %>      
        </div>
    </div>
</div>
