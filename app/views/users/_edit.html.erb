 <%= form_with(model: user, local: true) do |f| %>
        <%= render 'layouts/error_messages', model: user %>
        <div class="form group row mb-2">
          <div class="col-3 offset-1">
            <%= attachment_image_tag user, :profile_image, size:"60x60", fallback:"no_image.jpg", class: "rounded-image" %>
          </div>
        </div>

        <div class="form group row mb-2">
          <div class="col-3 offset-1">
            <%= f.label :"写真を更新" %>
          </div>
          <div class="col-8">
            <%= f.attachment_field :profile_image %>
          </div>
        </div>

        <div class="form group row mb-2">
          <div class="col-3 offset-1">
            <%= f.label :"ユーザー名" %>
          </div>
          <div class="col-8">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="form group row mb-2">
          <div class="col-3 offset-1">
            <%= f.label :"苗字" %>
          </div>
          <div class="col-8">
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
        </div>

        <div class="form group row mb-2">
          <div class="col-3 offset-1">
            <%= f.label :"名前" %>
          </div>
          <div class="col-8">
            <%= f.text_field :first_name, class: "form-control" %>
          </div>
        </div>

        <div class="form group row mb-2">
          <div class="col-3 offset-1">
            <%= f.label :"リンク" %>
          </div>
          <div class="col-8">
            <%= f.text_field :website, class: "form-control" %>
          </div>
        </div>

        <div class="form group row mb-2">
          <div class="col-3 offset-1">
            <%= f.label :"自己紹介" %>
          </div>
          <div class="col-8">
            <%= f.text_area :self_introduction, class: "form-control" %>
          </div>
        </div>

        <div class="form group row mb-2">
          <div class="col-3 offset-1"></div>
          <div class="col-8">
            <%= f.submit "更新", class: "origin-btn" %>
          </div>
        </div>
        <% end %>